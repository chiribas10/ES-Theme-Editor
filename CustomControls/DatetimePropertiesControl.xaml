    <CheckBox x:Name="cb_forceUppercase" Content="forceUppercase" HorizontalAlignment="Left" Margin="10,249.692,0,0" VerticalAlignment="Top" Checked="cb_forceUppercase_Checked" Unchecked="cb_forceUppercase_Unchecked"/>
