        <local:ImageElement x:Name="image"  Height="554.923" Margin="0,0,-12,-25.96" VerticalAlignment="Top" Width="259.668" Visibility="Visible"/>
        <!--</Grid>-->
    </GroupBox>

    <GroupBox x:Name="gb_text" Header="Type text. Properties" Height="554.923" VerticalAlignment="Top" Visibility="Hidden">
